{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 500,
  "title": "Golf Courses in Australia",
  "projection": { "type": "equalEarth" },
  "layer": [
    {
      "data": {
        "url": "data/countries_graticules.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "white" }
    },
    {
      "data": {
        "url": "data/countries_graticules.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
      },
      "mark": { "type": "geoshape", "stroke": "#ccc" }
    },
    {
      "data": { "url": "data/golf_courses.json" },
      "mark": { "type": "circle", "color": "green", "tooltip": { "content": "data" } },
      "encoding": {
        "longitude": { "field": "geometry.coordinates[0]", "type": "quantitative" },
        "latitude": { "field": "geometry.coordinates[1]", "type": "quantitative" },
        "size": { "value": 80 }
      }
    }
  ]
}
